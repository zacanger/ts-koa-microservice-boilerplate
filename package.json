{
  "name": "ts-koa-microservice-boilerplate",
  "description": "Example",
  "version": "2.0.7",
  "private": true,
  "author": "Zac Anger <zac@zacanger.com> (https://zacanger.com)",
  "license": "LGPL-3.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "cover": "npm run test:jest -- --coverage --no-cache",
    "dev": "nodemon",
    "prebuild": "sortpack && npm run test:build",
    "preversion": "npm run build",
    "start": "./scripts/start.sh",
    "test": "run-s -s test:ts test:lint test:jest",
    "test:build": "run-s test:ts test:lint cover coveralls",
    "test:jest": "NODE_ENV=test jest",
    "test:lint": "ts-standard src/*.ts",
    "test:ts": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zacanger/ts-koa-microservice-boilerplate.git"
  },
  "keywords": [
    "docker",
    "jenkins",
    "microservice",
    "typescript"
  ],
  "dependencies": {
    "@koa/router": "12.0.0",
    "boring-cluster": "6.1.5",
    "dnscache": "1.0.2",
    "koa": "2.14.2",
    "koa-mid": "4.0.0",
    "koa-simple-static": "4.0.11"
  },
  "devDependencies": {
    "@types/jest": "29.5.2",
    "@types/koa": "2.13.6",
    "@types/koa__router": "12.0.0",
    "@types/koa-bodyparser": "4.3.10",
    "@types/koa-compress": "4.0.3",
    "@types/node": "20.3.1",
    "@types/supertest": "2.0.12",
    "coveralls": "3.1.1",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "npm-run-all": "4.1.5",
    "sortpack": "2.3.4",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "json-summary",
      "lcov",
      "text",
      "json"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "resetMocks": true,
    "testPathIgnorePatterns": [
      "<rootDir>/(node_modules|lib)/"
    ],
    "testRegex": "\\.test\\.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
